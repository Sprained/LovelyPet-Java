<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".dicas.ActivityDicas"
    >

    <ScrollView
        android:id="@+id/ScrollId"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"
        android:scrollbars="none"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:background="@mipmap/background_tips"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:textColor="@color/corTextoEscuro"
                android:text="@string/txt_tips"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/CorViewLinha"/>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                app:cardCornerRadius="4dp"
                android:elevation="2dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:background="@mipmap/background_lovely_pet"/>

                    <LinearLayout
                        android:id="@+id/linearColor1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:layout_marginLeft="16dp"
                            android:text="Cuidados Básicos Padrões"
                            android:textSize="16sp"
                            android:fontFamily="@font/muli_bold"
                            android:textColor="@color/colorPrimary"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/CorViewLinha"
                            android:layout_marginTop="8dp"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:layout_marginLeft="16dp"
                            android:text="@string/txt_standard_care"
                            android:textColor="@color/corTextoEscuro"/>
                    </LinearLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>



            <!-- Dicas por raça -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:text="Raças Específicas"
                android:textSize="18sp"
                android:textColor="@color/colorPrimary"
                android:fontFamily="@font/muli_bold"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="#f2f2f2"/>


            <!-- Raças Específicas -->

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:scrollbars="none">

                <LinearLayout
                    android:id="@+id/linearColor2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="16dp">

                        <!-- Bulldog -->
                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:elevation="2dp"
                            android:layout_margin="8dp">

                            <LinearLayout
                                android:id="@+id/card1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="80dp"
                                    android:layout_height="80dp"
                                    android:layout_marginTop="16dp"
                                    android:layout_marginLeft="16dp"
                                    android:layout_marginRight="16dp"
                                    android:layout_gravity="center"
                                    android:src="@mipmap/ico_tips"/>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_margin="16dp"
                                    android:textAlignment="center"
                                    android:text="Bulldog"
                                    android:textColor="@color/corTextoEscuro"/>

                            </LinearLayout>

                        </com.google.android.material.card.MaterialCardView>

                        <!-- Shitzu -->
                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:elevation="2dp"
                            android:layout_margin="8dp">

                            <LinearLayout
                                android:id="@+id/card2"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="80dp"
                                    android:layout_height="80dp"
                                    android:layout_marginTop="16dp"
                                    android:layout_marginLeft="16dp"
                                    android:layout_marginRight="16dp"
                                    android:layout_gravity="center"
                                    android:src="@mipmap/ico_tips"/>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_margin="16dp"
                                    android:textAlignment="center"
                                    android:text="Shitzu"
                                    android:textColor="@color/corTextoEscuro"/>

                            </LinearLayout>

                        </com.google.android.material.card.MaterialCardView>

                        <!--Terrier-->
                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:elevation="2dp"
                            android:layout_margin="8dp">

                            <LinearLayout
                                android:id="@+id/card3"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="80dp"
                                    android:layout_height="80dp"
                                    android:layout_marginTop="16dp"
                                    android:layout_marginLeft="16dp"
                                    android:layout_marginRight="16dp"
                                    android:layout_gravity="center"
                                    android:src="@mipmap/ico_tips"/>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_margin="16dp"
                                    android:textAlignment="center"
                                    android:text="Terrier"
                                    android:textColor="@color/corTextoEscuro"/>

                            </LinearLayout>

                        </com.google.android.material.card.MaterialCardView>

                    </TableRow>

                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="16dp">

                        <!-- Angorá -->
                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:elevation="2dp"
                            android:layout_margin="8dp">

                            <LinearLayout
                                android:id="@+id/card4"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="80dp"
                                    android:layout_height="80dp"
                                    android:layout_marginTop="16dp"
                                    android:layout_marginLeft="16dp"
                                    android:layout_marginRight="16dp"
                                    android:layout_gravity="center"
                                    android:src="@mipmap/ico_tips"/>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_margin="16dp"
                                    android:textAlignment="center"
                                    android:text="Angorá"
                                    android:textColor="@color/corTextoEscuro"/>

                            </LinearLayout>

                        </com.google.android.material.card.MaterialCardView>

                        <!-- Persa -->
                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:elevation="2dp"
                            android:layout_margin="8dp">

                            <LinearLayout
                                android:id="@+id/card5"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="80dp"
                                    android:layout_height="80dp"
                                    android:layout_marginTop="16dp"
                                    android:layout_marginLeft="16dp"
                                    android:layout_marginRight="16dp"
                                    android:layout_gravity="center"
                                    android:src="@mipmap/ico_tips"/>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_margin="16dp"
                                    android:textAlignment="center"
                                    android:text="Persa"
                                    android:textColor="@color/corTextoEscuro"/>

                            </LinearLayout>

                        </com.google.android.material.card.MaterialCardView>

                        <!-- Sphynx -->
                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:elevation="2dp"
                            android:layout_margin="8dp">

                            <LinearLayout
                                android:id="@+id/card6"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="80dp"
                                    android:layout_height="80dp"
                                    android:layout_marginTop="16dp"
                                    android:layout_marginLeft="16dp"
                                    android:layout_marginRight="16dp"
                                    android:layout_gravity="center"
                                    android:src="@mipmap/ico_tips"/>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_margin="16dp"
                                    android:textAlignment="center"
                                    android:text="Sphynx"
                                    android:textColor="@color/corTextoEscuro"/>

                            </LinearLayout>

                        </com.google.android.material.card.MaterialCardView>

                    </TableRow>

                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="16dp">

                        <!-- Labrador -->
                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:elevation="2dp"
                            android:layout_margin="8dp">

                            <LinearLayout
                                android:id="@+id/card7"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="80dp"
                                    android:layout_height="80dp"
                                    android:layout_marginTop="16dp"
                                    android:layout_marginLeft="16dp"
                                    android:layout_marginRight="16dp"
                                    android:layout_gravity="center"
                                    android:src="@mipmap/ico_tips"/>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_margin="16dp"
                                    android:textAlignment="center"
                                    android:text="Labrador"
                                    android:textColor="@color/corTextoEscuro"/>

                            </LinearLayout>

                        </com.google.android.material.card.MaterialCardView>

                        <!-- Doberman -->
                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:elevation="2dp"
                            android:layout_margin="8dp">

                            <LinearLayout
                                android:id="@+id/card8"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="80dp"
                                    android:layout_height="80dp"
                                    android:layout_marginTop="16dp"
                                    android:layout_marginLeft="16dp"
                                    android:layout_marginRight="16dp"
                                    android:layout_gravity="center"
                                    android:src="@mipmap/ico_tips"/>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_margin="16dp"
                                    android:textAlignment="center"
                                    android:text="Doberman"
                                    android:textColor="@color/corTextoEscuro"/>

                            </LinearLayout>

                        </com.google.android.material.card.MaterialCardView>

                        <!-- Dálmata -->
                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:elevation="2dp"
                            android:layout_margin="8dp">

                            <LinearLayout
                                android:id="@+id/card9"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="80dp"
                                    android:layout_height="80dp"
                                    android:layout_marginTop="16dp"
                                    android:layout_marginLeft="16dp"
                                    android:layout_marginRight="16dp"
                                    android:layout_gravity="center"
                                    android:src="@mipmap/ico_tips"/>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_margin="16dp"
                                    android:textAlignment="center"
                                    android:text="Dálmata"
                                    android:textColor="@color/corTextoEscuro"/>

                            </LinearLayout>

                        </com.google.android.material.card.MaterialCardView>

                    </TableRow>

                </LinearLayout>

            </HorizontalScrollView>

        </LinearLayout>

    </ScrollView>



</LinearLayout>