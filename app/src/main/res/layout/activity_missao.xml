<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".sobre_a_equipe.MissaoActivity">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical"
       android:background="#fff"
       >


      <ImageView
          android:layout_width="match_parent"
          android:layout_height="250dp"
          android:background="@mipmap/background_lovely_pet"/>

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Como o Lovely Pet surgiu?"
          android:fontFamily="@font/muli_regular"
          android:layout_margin="16dp"
          android:textSize="20sp"
          android:textStyle="bold"
          android:textColor="@color/colorPrimary"/>

      <View
          android:layout_width="match_parent"
          android:layout_height="5dp"
          android:background="#f2f2f2"
          android:layout_marginLeft="16dp"
          android:layout_marginRight="16dp"/>

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_margin="16dp"
          android:text="@string/txt_sobre"
          android:textAlignment="inherit"
          android:fontFamily="@font/roboto_regular"
          android:padding="8dp"
          android:textColor="#A0A0A0"/>

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_margin="16dp"
          android:text="@string/txt_sobre"
          android:textAlignment="inherit"
          android:fontFamily="@font/roboto_regular"
          android:padding="8dp"
          android:textColor="#A0A0A0"/>

      <!-- MISSÃO -->

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Missão"
          android:layout_margin="16dp"
          android:fontFamily="@font/muli_regular"
          android:textSize="20sp"
          android:textStyle="bold"
          android:textColor="@color/colorPrimary"/>

      <View
          android:layout_width="match_parent"
          android:layout_height="5dp"
          android:background="#f2f2f2"
          android:layout_marginLeft="16dp"
          android:layout_marginRight="16dp"
          android:layout_marginBottom="8dp"/>

      <ImageView
          android:layout_width="match_parent"
          android:layout_height="220dp"
          android:background="@mipmap/background_missao"
          android:layout_margin="16dp"/>

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_margin="16dp"
          android:text="@string/txt_sobre"
          android:textAlignment="inherit"
          android:fontFamily="@font/roboto_regular"
          android:padding="8dp"
          android:textColor="#A0A0A0"/>



      <!-- VISÃO -->

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Visão"
          android:fontFamily="@font/muli_regular"
          android:layout_margin="16dp"
          android:textSize="20sp"
          android:textStyle="bold"
          android:textColor="@color/colorPrimary"/>

      <View
          android:layout_width="match_parent"
          android:layout_height="5dp"
          android:background="#f2f2f2"
          android:layout_marginLeft="16dp"
          android:layout_marginRight="16dp"
          android:layout_marginBottom="8dp"/>

      <ImageView
          android:layout_width="match_parent"
          android:layout_height="220dp"
          android:background="@mipmap/background_visao"
          android:layout_margin="16dp"/>

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_margin="16dp"
          android:text="@string/txt_sobre"
          android:textAlignment="inherit"
          android:fontFamily="@font/roboto_regular"
          android:padding="8dp"
          android:textColor="#A0A0A0"/>


      <!-- OBJETIVO -->

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Objetivo"
          android:fontFamily="@font/muli_regular"
          android:layout_margin="16dp"
          android:textSize="20sp"
          android:textStyle="bold"
          android:textColor="@color/colorPrimary"/>

      <View
          android:layout_width="match_parent"
          android:layout_height="5dp"
          android:background="#f2f2f2"
          android:layout_marginLeft="16dp"
          android:layout_marginRight="16dp"
          android:layout_marginBottom="8dp"/>

      <ImageView
          android:layout_width="match_parent"
          android:layout_height="220dp"
          android:background="@mipmap/background_objetivo"
          android:layout_margin="16dp"/>

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_margin="16dp"
          android:text="@string/txt_sobre"
          android:textAlignment="inherit"
          android:fontFamily="@font/roboto_regular"
          android:padding="8dp"
          android:textColor="#A0A0A0"/>


   </LinearLayout>


</ScrollView>