<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="100"
    tools:context=".dog.PopupActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/image_popup_cats"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_weight="70"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/titulo_popup_cats"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:text="Teste"
                android:textColor="#000"
                android:textSize="40sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Um amigo muito leal"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:textStyle="italic"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="#f2f2f2"
                android:layout_marginTop="20dp"
                />

            <TextView
                android:id="@+id/sobre_cats"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="35dp"
                android:text="Sobre"
                android:textColor="#75a542"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/descricao_popup_cats"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:hint="descrição"
                android:padding="20dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:text="Características"
                android:textColor="#75a542"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/animal_attributes_cats"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:padding="20dp"
                android:text="Descrição"
                android:textStyle="bold"
                android:textAlignment="center" />


        </LinearLayout>
    </ScrollView>

</LinearLayout>